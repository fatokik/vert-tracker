# Vert Tracker Configuration
# Copy to .env and adjust values as needed

# =============================================================================
# DRONE SETTINGS
# =============================================================================
# TELLO_IP=192.168.10.1
# TELLO_COMMAND_PORT=8889
# TELLO_STATE_PORT=8890
# TELLO_VIDEO_PORT=11111
# TELLO_CONNECT_TIMEOUT=10.0
# TELLO_HOVER_HEIGHT_CM=100

# =============================================================================
# POSE ESTIMATION (MediaPipe)
# =============================================================================
# Model complexity: 0 (lite), 1 (full), 2 (heavy)
# POSE_MODEL_COMPLEXITY=1
# POSE_MIN_DETECTION_CONFIDENCE=0.5
# POSE_MIN_TRACKING_CONFIDENCE=0.5
# POSE_ENABLE_SEGMENTATION=false

# =============================================================================
# JUMP DETECTION
# =============================================================================
# Velocity thresholds in pixels/frame for phase transitions
# JUMP_TAKEOFF_VELOCITY_THRESHOLD=-8.0
# JUMP_LANDING_VELOCITY_THRESHOLD=8.0
# Minimum frames airborne to count as valid jump
# JUMP_MIN_AIRBORNE_FRAMES=5
# Maximum frames airborne (sanity check)
# JUMP_MAX_AIRBORNE_FRAMES=60
# Frames of stability required to confirm landing
# JUMP_LANDING_STABILITY_FRAMES=3

# =============================================================================
# FILTERING (Kalman)
# =============================================================================
# Process noise (higher = trust measurements more)
# KALMAN_PROCESS_NOISE=0.01
# Measurement noise (higher = trust predictions more)
# KALMAN_MEASUREMENT_NOISE=0.1
# Smoothing window for velocity calculation
# SMOOTHING_WINDOW_SIZE=5

# =============================================================================
# CALIBRATION
# =============================================================================
# ArUco dictionary type (DICT_4X4_50, DICT_5X5_100, etc.)
# ARUCO_DICT=DICT_4X4_50
# ArUco marker size in cm
# ARUCO_MARKER_SIZE_CM=15.0
# Default pixels per cm (fallback if no calibration)
# DEFAULT_PX_PER_CM=5.0
# Reference distance from drone to subject in cm
# CALIBRATION_DISTANCE_CM=250

# =============================================================================
# USER INTERFACE
# =============================================================================
# Display window dimensions
# DISPLAY_WIDTH=1280
# DISPLAY_HEIGHT=720
# Overlay toggles
# SHOW_SKELETON=true
# SHOW_TRAJECTORY=true
# SHOW_METRICS=true
# SHOW_DEBUG_INFO=false

# =============================================================================
# LOGGING
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO
# LOG_FILE=  # Optional: path to log file
